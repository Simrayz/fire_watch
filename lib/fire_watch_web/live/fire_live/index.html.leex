<section class="mt-4 max-w-5xl mx-auto">
  <h1 class="text-red-700 text-2xl">Fire Reports</h1>

  <%= if @live_action in [:new, :edit] do %>
    <%= live_modal @socket, FireWatchWeb.FireLive.FormComponent,
      id: @fire.id || :new,
      title: @page_title,
      action: @live_action,
      fire: @fire,
      return_to: Routes.fire_index_path(@socket, :index) %>
  <% end %>

  <div class="flex justify-end mb-2">
    <form phx-change="select-per-page">
      <span>Show</span>
      <select name="per-page" class="bg-white rounded-md border text-red-900">
        <%= options_for_select([5, 10, 15, 20, 50, 100], @options.per_page) %>
      </select>
      <label for="per-page">per page</label>
    </form> 
  </div>

  <div class="bg-white border-yellow-600 border-opacity-50 border-t-0 rounded-md shadow overflow-hidden mb-4">
    <table class="table-auto min-w-full border-b border-yellow-600 border-opacity-25">
      <thead>
        <tr class="bg-yellow-600 rounded-md text-white text-sm font-light">
          <th class="py-2 px-3"><%= sort_link(@socket, "ID", :id, @options) %></th>
          <th class="py-2 px-3"><%= sort_link(@socket, "Month", :month, @options) %></th>
          <th class="py-2 px-3"><%= sort_link(@socket, "Week day", :day, @options) %></th>
          <th class="py-2 px-3"><%= sort_link(@socket, "Temp (Â°C)", :temp, @options) %></th>
          <th class="py-2 px-3"><%= sort_link(@socket, "Wind (km/h)", :wind, @options) %></th>
          <th class="py-2 px-3"><%= sort_link(@socket, "RH (%)", :rh, @options) %></th>
          <th class="py-2 px-3"><%= sort_link(@socket, "Rain (mm/m2)", :rain, @options) %></th>
          <th class="py-2 px-3"><%= sort_link(@socket, "Area (ha)", :area, @options) %></th>
          <th class="py-2 px-3"></th>
        </tr>
      </thead>
      <tbody id="fires" class="divide-solid">
        <%= for {fire, idx} <- Enum.with_index(@fires) do %>
          <tr id="fire-<%= fire.id %>" class="text-yellow-900 text-center hover:shadow <%= if rem(idx, 2) != 0, do: "bg-yellow-600 bg-opacity-10" %>">
            <td class="text-gray-600 py-2 px-3 border-r border-yellow-600 border-opacity-25"><%= fire.id %></td>
            <td class="py-2 px-3 border-r border-yellow-600 border-opacity-25"><%= fire.month %></td>
            <td class="py-2 px-3 border-r border-yellow-600 border-opacity-25"><%= fire.day %></td>
            <td class="py-2 px-3 border-r border-yellow-600 border-opacity-25"><%= fire.temp %></td>
            <td class="py-2 px-3 border-r border-yellow-600 border-opacity-25"><%= fire.wind %></td>
            <td class="py-2 px-3 border-r border-yellow-600 border-opacity-25"><%= fire.rh %></td>
            <td class="py-2 px-3 border-r border-yellow-600 border-opacity-25"><%= fire.rain %></td>
            <td class="py-2 px-3 border-r border-yellow-600 border-opacity-25"><%= fire.area %></td>

            <td>
              <span><%= live_redirect "Show", to: Routes.fire_show_path(@socket, :show, fire), class: "btn-secondary btn-sm" %></span>
              <span><%= live_patch "Edit", to: Routes.fire_index_path(@socket, :edit, fire), class: "btn-secondary btn-sm" %></span>
              <span><%= link "Delete", to: "#", phx_click: "delete", phx_value_id: fire.id, data: [confirm: "Are you sure?"], class: "btn-secondary btn-sm" %></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="flex items-center p-4 justify-end">
      <div class="border rounded-md flex items-center overflow-hidden">
        <%= if @options.page > 1 do %>
          <%= pagination_link(@socket, "Previous", @options.page - 1, @options, "hover:bg-yellow-100 px-2 border-r py-1") %>
        <% end %>
        <%= for i <- (@options.page - 2)..(@options.page + 2), i > 0 do %>
          <%= pagination_link(@socket, i, i, @options, "#{ if i === @options.page, do: 'bg-yellow-200'} hover:bg-yellow-100 px-2 border-r py-1") %>
        <% end %>
        <%= pagination_link(@socket, "Next", @options.page + 1, @options, "h-full hover:bg-yellow-100 px-2 py-1") %>
      </div>
    </div>
  </div>

  <span><%= live_patch "New Fire Report", to: Routes.fire_index_path(@socket, :new), class: "btn btn-main btn-md" %></span>
</div>
